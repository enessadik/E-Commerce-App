@model ProductListViewModel


<div class="row">
    <div class="col-md-12">
        <h1 style="background-color:dodgerblue">Yönetici Ürünler</h1>
        <hr>
        <a class="btn btn-success" href="/admin/products/create">Ürün Ekle </a>
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th style="width: 30px;">Id</th>
                    <th style="width: 100px;">Resim</th>
                    <th>İsim</th>
                    <th style="width: 20px;">Fiyat</th>
                    <th style="width: 20px;">Anasayfa</th>
                    <th style="width: 20px;">Onaylı</th>
                    <th style="width: 150px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products.Count > 0)
                {
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <th>@item.ProductId</th>
                            <td><img src="~/img/@item.ImageUrl" width="80"></td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("c")</td>
                            <td>
                                @if (item.IsHome)
                                {
                                    <i style="color:lawngreen" class="fas fa-check-circle"></i>
                                }
                                else
                                {
                                    <i style="color:red" class="fas fa-times-circle"></i>
                                }
                            </td>
                            <td>
                                @if (item.IsApproved)
                                {
                                    <i style="color:lawngreen" class="fas fa-check-circle"></i>
                                }
                                else
                                {
                                    <i style="color:red" class="fas fa-times-circle"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/products/@item.ProductId" class="btn btn-primary btn-sm mr-2">Güncelle</a>

                                <form action="/admin/deleteproduct" method="post" style="display:inline;">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>

                                </form>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Ürün Mevcut Değil!!!</h3>
                    </div>
                }


            </tbody>
        </table>
    </div>
</div>