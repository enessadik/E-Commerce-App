@model List<Category>
<div class="list-group">
    <b><a href="/products/" class="list-group-item list-group-item-action">Tüm Kategoriler</a></b>


    @foreach (var item in Model)
    {
        <a asp-controller="Shop"
           asp-action="List"
           asp-route-category="@item.Url"
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == item.Url.ToString()?"active":"")">
            @item.Name
        </a>
    }
</div>   